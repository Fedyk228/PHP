<?php

namespace HexletBasics\Loops\ReturnFromLoop;

// BEGIN (write your solution here)
function hasChar($str, $letter)
   { $i = 0;
     $length = strlen($str);
        while ($i < $length ) {
            $Selected = $str[$i];
            if ($Selected === $letter) {
                return true;
            } 
            $i += 1;
            }
            
        
    return false;
   }
// END
