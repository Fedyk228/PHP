<?php

namespace HexletBasics\Loops\ConditionsInsideLoops;

// BEGIN (write your solution here)
function countChars($str, $char)
{
    $i = 0;
    $count = 0;
    $str = strtolower($str);
    $char = strtolower($char);
        while($i < strlen($str)){
            if ($str[$i] ===$char){
                $count = $count +1;
            }
        $i = $i +1;
        }
    return $count;
}
// END
